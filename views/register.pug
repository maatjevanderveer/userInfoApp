html
	head
		title REGISTER
	body

		//- NAV BAR
		nav
			a(href='/') USER INFO APPLICATION
			ul
				li 
					a(href='/search') SEARCH
				li
					a(href='/register') REGISTER

		//- REGISTER FORM
		h1 Register

		form(action='/register' method='post')
			label(for='firstname') First name:
			input(type='text', placeholder='type first name here...', name='newfirstname')

			label(for='lastname') Last name:
			input(type='text', placeholder='type last name here...', name='newlastname')

			label(for='email') E-mail:
			input(type='text', placeholder='type email here...', name='newemail')
		button(type='submit') Register me now
